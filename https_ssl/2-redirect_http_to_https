global
    log /dev/log local0
    log /dev/log local1 notice
    daemon
    maxconn 2048
    tune.ssl.default-dh-param 2048
    user haproxy
    group haproxy

defaults
    log global
    mode http
    option httplog
    option dontlognull
    retries 3
    option redispatch
    timeout connect 5000ms
    timeout client 10000ms
    timeout server 10000ms
    option forwardfor
    option http-server-close

# HTTP frontend: redirect all traffic to HTTPS
frontend www-http
    bind 0.0.0.0:80
    redirect scheme https code 301 if !{ ssl_fc }

# HTTPS frontend: terminate SSL and forward to backend
frontend www-https
    bind 0.0.0.0:443 ssl crt /etc/letsencrypt/certs/www.nyayath.tech.pem
    default_backend www-backend

# Backend servers
backend www-backend
    balance roundrobin
    server web01 3.86.34.30:80 check
    server web02 44.202.109.218:80 check

