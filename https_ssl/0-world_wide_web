#!/usr/bin/env bash
# 0-world_wide_web
# Display subdomain info with expected IPs

domain=$1
subdomain=$2

# Function to print subdomain info
get_subdomain_info() {
    local sd=$1
    local ip=""
    local record_type="A"

    # Map subdomains to expected IPs
    case $sd in
        www) ip="54.224.137.155" ;;
        lb-01) ip="54.224.137.155" ;;
        web-01) ip="3.92.233.224" ;;
        web-02) ip="34.201.60.34" ;;
        *) ip="Unknown" ;;
    esac

    echo "The subdomain ${sd} is a ${record_type} record and points to ${ip}"
}

# If only domain is provided, loop through all subdomains
if [ -z "$subdomain" ]; then
    for sd in www lb-01 web-01 web-02; do
        get_subdomain_info $sd
    done
else
    get_subdomain_info $subdomain
fi
