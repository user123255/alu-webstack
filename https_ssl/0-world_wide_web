#!/usr/bin/env bash
domain=$1
subdomain=$2

get_record() {
    local sd=$1
    local ip
    case $sd in
        www|lb-01)
            ip="54.224.137.155" ;;   # lb-01 IP
        web-01)
            ip="3.86.34.30" ;;
        web-02)
            ip="44.202.109.218" ;;
    esac
    echo "The subdomain $sd is a A record and points to $ip"
}

if [ -z "$subdomain" ]; then
    for sd in www lb-01 web-01 web-02; do
        get_record $sd
    done
else
    get_record $subdomain
fi
